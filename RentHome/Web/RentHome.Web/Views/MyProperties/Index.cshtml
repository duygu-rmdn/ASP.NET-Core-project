@model RentHome.Web.ViewModels.Properties.PropertiesListViewModel
@{
    this.ViewData["Title"] = "MyProperties";
}

<section class="breadcumb-area bg-img call-to-action-area bg-fixed bg-overlay-black" style="background-image: url(https://i.ytimg.com/vi/Nd5YbZC94Y4/hqdefault.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcumb-content">
                    <h3 class="breadcumb-title">My Properties</h3>
                </div>
            </div>
        </div>
    </div>
</section>
<br>
<div class="container">
    @if (Model.Properties.Count() == 0)
    {
        <h3>You have no registered properties yet</h3>
        <a class="btn south-btn" asp-area="" asp-controller="Properties" asp-action="Create">Create Property</a>
    }
    else
    {
        <div class="row  justify-content-center">
            @foreach (var property in Model.Properties)
            {
                <!-- Single Featured Property -->
                <div class="col-12 col-md-6 col-xl-4">
                    <div class="single-featured-property mb-50">
                        <!-- Property Thumbnail -->
                        <div class="property-thumb">
                            <img src="@property.ImageUrl" alt="">

                            <div class="tag">
                                <span>For Sale</span>
                            </div>
                            <div class="list-price">
                                <p>$@property.Price</p>
                            </div>
                        </div>
                        <!-- Property Content -->
                        <div class="property-content">
                            <h5>@property.Name</h5>
                            <p class="location"><img src="https://technext.github.io/south/img/icons/location.png" alt="">@property.Address</p>
                            <p>@property.Description</p>
                            <a class="btn south-btn" asp-area="" asp-controller="Properties" asp-action="Details" asp-route-id="@property.Id">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>