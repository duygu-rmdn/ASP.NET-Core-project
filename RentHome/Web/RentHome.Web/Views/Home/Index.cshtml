@using RentHome.Common
@model RentHome.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://www.langrealty.com/uploads/luxury-2.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <div class="hero-slides-content">
                    <h2 data-animation="fadeInUp" data-delay="100ms">Find your home</h2>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://www.luxuryvillasibiza.net/images/cw-group-banner-new.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <div class="hero-slides-content">
                    <h2 data-animation="fadeInUp" data-delay="100ms">Find your dream house</h2>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://homes.dupontregistry.com/wp-content/uploads/WPL/830378/thimg_21HD-08-43-A_1920x620.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <div class="hero-slides-content">
                    <h2 data-animation="fadeInUp" data-delay="100ms">Find your perfect house</h2>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="text-center container">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <p>We have:</p>
    <div class="col-md-4 offset-4">
        <ul class="list-group">
            <li class="list-group-item">Countries: @Model.CountriesCount</li>
            <li class="list-group-item">Cities: @Model.CitiesCount</li>
        </ul>
    </div>

    <div class="row  justify-content-center">
        @foreach (var property in Model.RandomProperties)
        {
            <!-- Single Featured Property -->
            <div class="col-12 col-md-6 col-xl-4">
                <div class="single-featured-property mb-50">
                    <!-- Property Thumbnail -->
                    <div class="property-thumb">
                        <img src="@property.ImageUrl" alt="">

                        <div class="tag">
                            <span>For Sale</span>
                        </div>
                        <div class="list-price">
                            <p>$@property.Price</p>
                        </div>
                    </div>
                    <!-- Property Content -->
                    <div class="property-content">
                        <h5>@property.Name</h5>
                        <p class="location"><img src="https://technext.github.io/south/img/icons/location.png" alt="">@property.Address</p>
                        <p>@property.Description</p>
                        <a class="btn south-btn" asp-area="" asp-controller="Properties" asp-action="Details" asp-route-id="@property.Id">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<section class="call-to-action-area bg-fixed bg-overlay-black" id="someId" style="background-image: url(https://mlbostoncommon.com/get/files/image/galleries/interior-deign-spacejoy-unsplash.jpg)">
    <div class="container h-100">
        <div class="row align-items-center h-100">
            <div class="col-12">
                <div class="cta-content text-center">
                    <h2 class="wow fadeInUp" data-wow-delay="300ms">Are you looking for a place to rent?</h2>
                    <h6 class="wow fadeInUp" data-wow-delay="400ms">Not sure where to go?</h6>    
                    <h6 class="wow fadeInUp" data-wow-delay="400ms">Perfect! I'm flexible</h6>    
                    <a asp-area="" asp-controller="Search" asp-action="Index" class="btn south-btn mt-50 wow fadeInUp" data-wow-delay="500ms">Search</a>
                </div>
            </div>
        </div>
    </div>
</section>

